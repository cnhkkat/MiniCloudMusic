/* pages/musicList/index.wxss */
.page-musicList {
  height: 320rpx;
  filter: blur(20rpx);
  opacity: 0.4;
}
.mask {
  position: absolute;
  z-index: -1;
  background-color: #333;
  width: 100%;
  height: 320rpx;
  top: 0;
  left: 0;
}
.info {
  display: flex;
  position: absolute;
  align-items: center;
  top: 0;
  left: 0;
  z-index: 9;
  padding: 20rpx;
}
.info .coverImg {
  width: 280rpx;
  height: 280rpx;
  margin-right: 24rpx;
  border-radius: 6rpx;
}
.info .detail {
  flex: 1;
}
.info .detail .name {
  font-size: 32rpx;
  color:#fff;
  line-height: 60rpx;
}