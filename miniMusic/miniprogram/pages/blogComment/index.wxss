/* pages/blogComment/index.wxss */
.blog-card {
  margin-bottom: 20rpx;
}
.comment-list {
  background-color: #fff;
}
.comment {
  padding: 20rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.1);
}
.comment-title {
  display: flex;
  align-items: center;
}
.comment-avatarUrl {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.comment-nickname {
  flex: 1;
}
.comment-content {
  font-size: 32rpx;
  padding: 10rpx 0;
}

.comment-time {
  font-size: 24rpx;
  color: #939393;
}

.blog-ctrl {
  /* position: fixed; */
  width: 100%;
  /* height: 100rpx; */
  /* bottom: 0; */
  left: 0;
  border-top: 2rpx solid rgba(0, 0, 0, 0.1);
}