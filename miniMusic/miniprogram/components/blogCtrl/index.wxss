/* components/blogCtrl/index.wxss */
.ctrl {
  display: flex;
  height: 60rpx;
  background: #fff;
  position: relative;
}
.ctrl-item {
  flex: 1;
  text-align: center;
  font-size: 26rpx;
  color: rgba(40, 47, 60, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
}
.ctrl::after{
  content: '';
  height: 30rpx;
  width: 1px;
  position: absolute;
  left: 50%;  
  top: 15rpx;
  background: #f1f1f1;
}
.icon {
  font-size: 42rpx;
  margin-right: 12rpx;
}
.content {
  padding: 20rpx;
  font-size: 32rpx;

}
.send-btn {
  background: #d43c33;
  color: #fff;
  font-size: 24rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.share-btn {
  background-color: #fff;
  color: rgba(40, 47, 60, 0.8);
  padding: 0;
  height: 100%;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 26rpx;
}

.share-btn::after {
  display: none;
}

.share-hover::after {
  border: 0;
}