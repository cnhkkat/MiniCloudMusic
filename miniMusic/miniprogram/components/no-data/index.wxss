/* components/no-data/index.wxss */
.no-data {
  position: relative;
  top: 0;
  left: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  flex: 1;
  width: 100%;
  min-height: 100%;
  margin: 400rpx auto 10rpx;
}

.no-data-img {
  width: 240rpx;
  height: 240rpx;
}
.icon {
  font-size: 150rpx;
  color: #d43c43;
}

.no-data-tip {
  font-size: 28rpx;
  color: #666666;
  margin-top: 18rpx;
  text-align: center;
  width: 100%;
}
