/* components/search/index.wxss */
.container {
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  position: relative;
}

.input {
  flex: 1;
  height: 68rpx;
  font-size: 28rpx;
  border-radius: 50px;
  background-color: #f5f5f5;
  padding-left: 60rpx;
  padding-right: 60rpx;
}

.search-btn {
  background: #d43c33;
  color: #fff;
  margin-left: 20rpx;
  font-size: 24rpx;
}

.placeholder-class {
  color: #999;
}

.find {
  position: absolute;
  top: 50%;
  transform: translate(-100%, -50%);
  color: #9f9f9f;
  padding-right: 10rpx;
}
.clear-wrap{
  position: absolute;
  width: 60rpx;
  height: 60rpx;
  right: 135rpx;
  text-align: center;
  line-height: 60rpx;
}
.clear{
  color: #eee;
  background: #999;
  border-radius: 50%;
}