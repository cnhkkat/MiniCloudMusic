/* components/blogCard/index.wxss */
.blog {
  padding: 20rpx;
  background: #fff;
}
.blog-title {
  display: flex;
  align-items: center;
}
.blog-title .avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}
.blog-box{
  flex:1
}
.blog-box .nickname {
  font-style: 32rpx;
  margin-right: 10rpx;
}
.blog-box .createTime {
  font-size: 24rpx;
  color: #939393;
}
.blog-content {
  margin: 20rpx 0;
  font-size: 32rpx;
  word-break: break-all;
}
.blog-img {
  display: flex;
  flex-wrap: wrap;
  /* justify-content: space-between; */
}
.blog-img .img {
  width: 230rpx;
  height: 230rpx;
  margin-right: 10rpx;
  margin-bottom: 10rpx;
}
.blog-img .img:nth-child(3n){
  margin-right: 0;
}